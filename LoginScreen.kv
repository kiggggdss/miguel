
<MainLayout>:
    screen_manager: screen_manager1
    ScreenManager:
        id: screen_manager1

        Screen:
            id: Login_screen
            name: "login_screen"
        
            MDBoxLayout:
                orientation: 'vertical'
                padding: "130dp"
                spacing: "20dp"
                MDLabel:
                    text: "Login Screen"
                    halign: "center"
                MDTextField:
                    hint_text: "username"
                    id:username2
                MDTextField:
                    hint_text: "password"
                    password: True
                    id:password2
                MDRoundFlatButton:
                    text:"Sign In"
                    size_hint: 0.4, 0.1
                    pos_hint: {"center_x": 0.5}
                    on_press:
                        root.login()
                        #root.slides("dashboard_screen", "up")

                MDRoundFlatButton:
                    text:"Register Here"
                    size_hint: 0.4, 0.1
                    pos_hint: {"center_x": 0.5}
                    on_press: 
                        root.slides("reg_screen", "right")
                        #screen_manager1.current = "reg_screen"
                        #screen_manager1.transition.direction = "right"
        
        
        Screen:

            id: registeration_screen
            name: "reg_screen"
            
            MDBoxLayout:
                orientation: 'vertical'
                padding: "130dp"
                spacing: "20dp"
                MDLabel:
                    text: "Registration Screen"
                    halign: "center"
                MDTextField:
                    hint_text: "username"
                    id: username
                MDTextField:
                    hint_text: "First Name"
                    id: firstname
                MDTextField:
                    hint_text: "Last Name"
                    id: lastname
                MDTextField:
                    hint_text: "Email"
                    validator: 'email'
                    helper_text: 'email format required'
                    helper_text_mode: 'on_error'
                    id: email
                MDTextField:
                    hint_text: "password"
                    password: True
                    id: password
                MDRoundFlatButton:
                    text:"Sign Up"
                    size_hint: 0.4, 0.1
                    pos_hint: {"center_x": 0.5, "y": 0.5}
                    on_press:

                        root.register()
                        root.slides("login_screen", "up")
                        #screen_manager1.current = "dashboard_screen"
                        #screen_manager1.transition.direction = "right"

        Screen:
            id: dashboard_screen
            name: "dashboard_screen"

            MDBoxLayout:
                orientation: "vertical"
                size: root.size
                MDTopAppBar:
                    title: "Navigation Bar"
                    left_action_items: [["menu"]]
                    right_action_items: [["dots-vertical"],["theme-light-dark"]]
        
                MDBottomNavigation:
                    panel_color: app.theme_cls.primary_color
                    selected_color_background: None
                    text_color_active: app.theme_cls.primary_dark
                    text_color_normal: 1,1,1,1
                    use_text: False
                    transition_duration: 0.9 #animate a fade in screen switch

                    MDBottomNavigationItem:
                        name: 'screen 1'
                        icon: 'home-outline'
                        #badge_icon: "numeric-10"
                    
                        MDLabel:
                            text: 'Welcome to KivyMD- SECTION 1'
                            halign: 'center'
                            font_size: '55sp'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color

                    MDBottomNavigationItem:
                        name: 'screen 2'
                        icon: 'magnify'
                        #badge_icon: "numeric-10"
                    
                        MDLabel:
                            text: 'Welcome to KivyMD- SECTION 2'
                            halign: 'center'
                            font_size: '55sp'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color

                    MDBottomNavigationItem:
                        name: 'screen 3'
                        icon: 'plus'
                        #badge_icon: "numeric-10"
                    
                        MDLabel:
                            text: 'Welcome to KivyMD- SECTION 3'
                            halign: 'center'
                            font_size: '55sp'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color

                    MDBottomNavigationItem:
                        name: 'screen 4'
                        icon: 'message-processing-outline'
                        #badge_icon: "numeric-10"
                    
                        MDLabel:
                            text: 'Welcome to KivyMD- SECTION 4'
                            halign: 'center'
                            font_size: '55sp'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color

                    MDBottomNavigationItem:
                        name: 'screen 5'
                        icon: 'bell-outline'
                        #badge_icon: "numeric-10"
                    
                        MDLabel:
                            text: 'Welcome to KivyMD- SECTION 5'
                            halign: 'center'
                            font_size: '55sp'
                            theme_text_color: "Custom"
                            text_color: app.theme_cls.primary_color


